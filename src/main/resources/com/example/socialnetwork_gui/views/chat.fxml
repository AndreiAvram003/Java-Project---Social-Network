<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.socialnetwork_gui.presentation.InterfaceGUI.ChatController" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">

    <ListView fx:id="chatListView" VBox.vgrow="ALWAYS" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 5;" />

    <TextArea fx:id="replyTextArea" prefHeight="50.0" style="-fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1px; -fx-border-radius: 5; -fx-padding: 5;" />

    <HBox alignment="CENTER" spacing="10.0">
        <Button onAction="#sendButtonClicked" text="Send" style="-fx-background-color: #4CAF50; -fx-text-fill: #ffffff; -fx-font-weight: bold;"/>
        <Button onAction="#replyMethod" text="Reply" style="-fx-background-color: #4285F4; -fx-text-fill: #ffffff; -fx-font-weight: bold;"/>
    </HBox>

</VBox>
