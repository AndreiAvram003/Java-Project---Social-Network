<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.socialnetwork_gui.presentation.InterfaceGUI.UserOnlyController" style="-fx-background-color: #f0f0f0;">

    <VBox fx:id="mainVBox" spacing="10.0" alignment="CENTER" prefWidth="300.0" prefHeight="200.0" style="-fx-alignment: CENTER;">

        <Region VBox.vgrow="ALWAYS"/>

        <Label fx:id="helloLabel" text="" style="-fx-text-fill: #1976D2; -fx-font-size: 24; -fx-font-weight: bold;"/>

        <HBox spacing="10.0" alignment="CENTER">
            <Region HBox.hgrow="ALWAYS"/>
            <Button text="View Friends" onAction="#handleViewFriends" style="-fx-background-color: #4CAF50; -fx-text-fill: #ffffff; -fx-font-weight: bold;"/>
            <Button text="Send Requests" onAction="#handleSendRequests" style="-fx-background-color: #4285F4; -fx-text-fill: #ffffff; -fx-font-weight: bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </VBox>
</AnchorPane>
