<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.socialnetwork_gui.presentation.InterfaceGUI.LoginController" style="-fx-background-color: #f0f0f0; -fx-padding: 20;">

    <VBox spacing="10.0" alignment="CENTER" prefWidth="300.0" prefHeight="200.0" style="-fx-padding: 0 50 0 50;">

        <Label text="Username:" style="-fx-font-weight: bold;"/>
        <TextField fx:id="usernameField" promptText="Enter your username" />

        <Label text="Password:" style="-fx-font-weight: bold;"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password" />

        <Button text="Log In" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: #ffffff; -fx-font-weight: bold;"/>

        <Label fx:id="statusLabel" text="" style="-fx-text-fill: #d32f2f;"/>

    </VBox>

</AnchorPane>
